@model IEnumerable<BobaTea.Models.OrderDetail>

@{
    var order = ViewBag.Order as BobaTea.Models.OrderPro;

}

<h3>Thông tin khách hàng</h3>
<p>Tên: @ViewBag.Customer.NameCus</p>
<p>Số điện thoại: @ViewBag.Customer.PhoneCus</p>
<p>Email: @ViewBag.Customer.EmailCus</p>

<h3>Thông tin đơn hàng</h3>
<p>Ngày đặt: @ViewBag.Order.DateOrder.ToString("dd/MM/yyyy")</p>
<p>Địa chỉ giao: @ViewBag.Order.AddressDeliverry</p>

<h3>Chi tiết đơn hàng</h3>
<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IDProduct</td> 
                <td>@item.Quantity</td>
                <td>@item.UnitPrice</td>
                <td>@(item.Quantity * item.UnitPrice)</td>
            </tr>
        }
    </tbody>
</table>
