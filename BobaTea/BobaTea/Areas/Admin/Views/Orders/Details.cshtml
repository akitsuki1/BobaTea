@model IEnumerable<BobaTea.Models.OrderDetail>

@{
    var order = ViewBag.Order as BobaTea.Models.OrderPro;
}

<h3>Chi tiết đơn hàng #@order.ID</h3>

<p><strong>Khách hàng:</strong> @order.Customer?.Name</p>
<p><strong>Ngày đặt:</strong> @order.DateOrder</p>
<p><strong>Địa chỉ:</strong> @order.AddressDeliverry</p>

<hr />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
            <th>Tổng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.Product?.Name</td>
                <td>@d.UnitPrice</td>
                <td>@d.Quantity</td>
                <td>@(d.UnitPrice * d.Quantity)</td>
            </tr>
        }
    </tbody>
</table>
