<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Quản trị Trà Sữa</title>

    <!--  Bootstrap & Font -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a2e0e6f77b.js" crossorigin="anonymous"></script>

    <!--  CSS riêng cho Admin -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/css/admin.css" />
</head>
<body>
    <div class="admin-wrapper d-flex">
        <!-- Sidebar -->
        <aside class="sidebar p-3">
            <h4 class="text-center mb-4">🍹 Admin Panel</h4>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a href="/Admin/User" class="nav-link text-white">
                        <i class="fas fa-users me-2"></i> Quản lý người dùng
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="/Admin/Products" class="nav-link text-white">
                        <i class="fas fa-box-open me-2"></i> Quản lý sản phẩm
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="@Url.Action("Index", "Orders", new { area = "Admin" })" class="nav-link text-white">
                        <i class="fas fa-receipt me-2"></i> Thông tin đơn hàng
                    </a>
                </li>
                <li class="nav-item mt-4">
                    <a href="/Account/Logout" class="nav-link text-danger">
                        <i class="fas fa-sign-out-alt me-2"></i> Đăng xuất
                    </a>
                </li>
            </ul>
        </aside>
        <!-- Main content -->
        <main class="main-content flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>

    <!--Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
    @RenderSection("Styles", required: false)
</body>
</html>
