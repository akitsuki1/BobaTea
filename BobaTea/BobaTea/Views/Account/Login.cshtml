@{
    Layout = null;
    ViewBag.Title = "Đăng nhập";
}

@if (TempData["LoginRequired"] != null)
{
    <div class="alert alert-warning">
        @TempData["LoginRequired"]
    </div>
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <title>@ViewBag.Title - BobaTea</title>
    <link rel="stylesheet" href="~/Content/css/Login.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <div class="login-page">
        <div class="login-box">
            <h2>Đăng nhập</h2>

            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <!-- Hiển thị thông báo lỗi -->
                if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger text-center" style="color:red;">
                        @Html.ValidationSummary()
                    </div>
                }

                <div class="input-box">
                    <input type="text" name="Username" required />
                    <label>Tên đăng nhập</label>
                    <div class="input-line"></div>
                    <i class="icon fas fa-user"></i>
                </div>

                <div class="input-box">
                    <input type="password" name="Password" required />
                    <label>Mật khẩu</label>
                    <div class="input-line"></div>
                    <i class="icon fas fa-lock"></i>
                </div>

                <div class="remember-forgot">
                    <label><input type="checkbox" /> Nhớ mật khẩu</label>
                    <a href="#">Quên mật khẩu?</a>
                </div>

                <button type="submit">Đăng nhập</button>

                <div class="register-link">
                    <p>Chưa có tài khoản? <a href="/Account/Register">Đăng ký ngay</a></p>
                </div>
            }
        </div>
    </div>
</body>
</html>
